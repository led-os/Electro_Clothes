<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".ui.fragment.home.ElectFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_44">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/padding_25"
            android:text="陈晓晓"
            android:textColor="@color/color_353535"
            android:textSize="@dimen/text_font_14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="4月29日"
            android:textColor="@color/color_353535"
            android:textSize="@dimen/text_font_16" />


        <ImageView
            android:id="@+id/img_bluetooth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/padding_40"
            android:src="@drawable/icon_bluetooth_select" />

    </RelativeLayout>


    <com.business.electr.clothes.view.DashBoard
        android:id="@+id/dash_board"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_300"
        android:background="@color/white" />

</LinearLayout>