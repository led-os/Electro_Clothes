<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/padding_241"
    android:layout_height="@dimen/padding_27"
    android:layout_gravity="center_horizontal"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/tv_day"
        android:layout_width="@dimen/padding_60"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textSize="@dimen/text_font_13"
        android:textColor="@color/white"
        android:background="@drawable/bg_time_day_select"
        android:text="@string/day"/>

    <TextView
        android:id="@+id/tv_week"
        android:layout_width="@dimen/padding_60"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textSize="@dimen/text_font_13"
        android:textColor="@color/color_979797"
        android:layout_marginStart="-0.33dp"
        android:background="@drawable/bg_time_month_noselect"
        android:text="@string/week"/>


    <TextView
        android:id="@+id/tv_month"
        android:layout_width="@dimen/padding_60"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginStart="-0.33dp"
        android:textSize="@dimen/text_font_13"
        android:textColor="@color/color_979797"
        android:background="@drawable/bg_time_month_noselect"
        android:text="@string/month"/>

    <TextView
        android:id="@+id/tv_year"
        android:layout_width="@dimen/padding_60"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginStart="-0.33dp"
        android:textSize="@dimen/text_font_13"
        android:textColor="@color/color_979797"
        android:background="@drawable/bg_time_year_noselect"
        android:text="@string/year"/>

</LinearLayout>