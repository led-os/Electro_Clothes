<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/padding_50"
    xmlns:tools="http://schemas.android.com/tools">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical">
        
        <View
            android:id="@+id/view"
            android:layout_width="@dimen/padding_7"
            android:layout_height="@dimen/padding_7"
            android:layout_marginStart="@dimen/padding_25"
            android:layout_marginEnd="@dimen/padding_17"
            android:background="@drawable/circular_4a90e2"/>

        <TextView
            android:id="@+id/tv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_font_14"
            android:textColor="@color/color_353535"
            tools:text="睡觉"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>


        <ImageView
            android:id="@+id/img_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/padding_30"
            android:visibility="gone"
            android:src="@drawable/icon_select_grader"/>
        
        
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_0_33"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/padding_25"
        android:layout_marginEnd="@dimen/padding_31"
        android:background="@color/color_44979797"/>

</RelativeLayout>