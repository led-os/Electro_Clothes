<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.mine.SetNewPasswordActivity">

    <ImageView
        android:id="@+id/img_back"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/padding_30"
        android:src="@drawable/ic_goback"
        android:paddingEnd="@dimen/padding_20"
        android:paddingStart="@dimen/padding_15"
        android:layout_marginTop="@dimen/padding_30"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/set_new_password"
        android:textColor="@color/color_353535"
        android:textSize="@dimen/text_font_22"
        android:layout_marginTop="@dimen/padding_50"
        android:layout_marginStart="@dimen/padding_28"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding_28"
        android:layout_marginEnd="@dimen/padding_28"
        android:layout_marginTop="@dimen/padding_35"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <EditText
            android:id="@+id/et_new_password"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/padding_40"
            android:inputType="textPassword"
            android:hint="@string/please_in_new_password"
            android:textColor="@color/color_353535"
            android:textSize="@dimen/text_font_13"
            android:textColorHint="@color/color_8c919b"
            android:background="@null"
            />

        <ImageView
            android:id="@+id/img_new_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_10"
            android:visibility="gone"
            android:layout_gravity="center_vertical"
            android:src="@drawable/icon_delete"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/padding_30"
        android:layout_marginEnd="@dimen/padding_30"
        android:layout_height="@dimen/padding_0.5"
        android:background="@color/color_44979797"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding_28"
        android:layout_marginEnd="@dimen/padding_28"
        android:layout_marginTop="@dimen/padding_12"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <EditText
            android:id="@+id/et_again_password"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/padding_40"
            android:inputType="textPassword"
            android:hint="@string/please_in_again_password"
            android:textSize="@dimen/text_font_13"
            android:textColorHint="@color/color_8c919b"
            android:background="@null"
            />

        <ImageView
            android:id="@+id/img_again_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_10"
            android:visibility="gone"
            android:layout_gravity="center_vertical"
            android:src="@drawable/icon_delete"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/padding_30"
        android:layout_marginEnd="@dimen/padding_30"
        android:layout_height="@dimen/padding_0.5"
        android:background="@color/color_44979797"/>


    <TextView
        android:id="@+id/tv_confirm"
        android:layout_width="@dimen/padding_284"
        android:layout_height="@dimen/padding_48"
        android:background="@drawable/bg_login_get_code"
        android:gravity="center"
        android:layout_marginTop="@dimen/padding_33"
        android:layout_gravity="center_horizontal"
        android:text="@string/confirm_"
        android:textColor="@color/white"
        android:textSize="@dimen/text_font_16" />

</LinearLayout>