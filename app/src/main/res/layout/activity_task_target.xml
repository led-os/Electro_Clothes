<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".ui.activity.mine.TaskTargetActivity">

    <include layout="@layout/title_bar_layout"/>

    <TextView
        android:layout_marginTop="@dimen/padding_15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_353535"
        android:textSize="@dimen/text_font_21"
        android:layout_marginStart="@dimen/padding_23"
        android:text="@string/set_one_target"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_8c919b"
        android:textSize="@dimen/text_font_12"
        android:layout_marginStart="@dimen/padding_23"
        android:layout_marginTop="@dimen/padding_9"
        android:layout_marginBottom="@dimen/padding_50"
        android:text="@string/day_task_marget"/>


    <com.business.electr.clothes.view.HorizontalProcessor
        android:id="@+id/hp_sleep"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_120"
        android:layout_marginStart="@dimen/padding_27"
        app:mShowType="sleep_time"
        android:layout_marginEnd="@dimen/padding_27"/>

    <com.business.electr.clothes.view.HorizontalProcessor
        android:id="@+id/hp_elect"
        android:layout_width="match_parent"
        app:mShowType="elect_num"
        android:layout_height="@dimen/padding_120"
        android:layout_marginStart="@dimen/padding_27"
        android:layout_marginEnd="@dimen/padding_27"/>
    <com.business.electr.clothes.view.HorizontalProcessor
        android:id="@+id/hp_number"
        android:layout_width="match_parent"
        app:mShowType="number"
        android:layout_height="@dimen/padding_120"
        android:layout_marginStart="@dimen/padding_27"
        android:layout_marginEnd="@dimen/padding_27"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <TextView
        android:id="@+id/tv_confirm"
        android:layout_width="@dimen/padding_305"
        android:layout_height="@dimen/padding_48"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/padding_19"
        android:layout_marginBottom="@dimen/padding_29"
        android:background="@drawable/bg_login_get_code"
        android:gravity="center"
        android:text="@string/confirm"
        android:textColor="@color/white"
        android:textSize="@dimen/text_font_15" />


</LinearLayout>