<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.business.electr.clothes.ui.activity.mine.ModifyUserInfoActivity">

    <include layout="@layout/title_bar_layout" />


    <!--姓名-->
    <LinearLayout
        android:id="@+id/lin_name"
        android:layout_marginTop="@dimen/padding_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_63"
        android:background="@drawable/selector_bg_click"
        android:gravity="center_vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_28"
            android:text="@string/name"
            android:textColor="@color/color_353535"
            android:textSize="@dimen/text_font_13" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />


        <EditText
            android:id="@+id/et_name"
            android:layout_width="@dimen/padding_150"
            android:layout_marginEnd="@dimen/padding_15"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="@string/please_input"
            android:gravity="right|center_vertical"
            android:textColor="@color/color_8c919b"
            android:textSize="@dimen/text_font_14" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_marginEnd="@dimen/padding_36"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_right"/>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_0_33"
        android:layout_marginStart="@dimen/padding_28"
        android:layout_marginEnd="@dimen/padding_25"
        android:background="@color/color_44979797" />

    <!--性别-->
    <LinearLayout
        android:id="@+id/lin_gender"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_63"
        android:background="@drawable/selector_bg_click"
        android:gravity="center_vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_28"
            android:text="@string/gender"
            android:textColor="@color/color_353535"
            android:textSize="@dimen/text_font_13" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />


        <TextView
            android:id="@+id/tv_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/padding_15"
            android:text="@string/please_select"
            android:textColor="@color/color_8c919b"
            android:textSize="@dimen/text_font_14" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_marginEnd="@dimen/padding_36"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_right"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_0_33"
        android:layout_marginStart="@dimen/padding_28"
        android:layout_marginEnd="@dimen/padding_25"
        android:background="@color/color_44979797" />

    <!--出生日期-->
    <LinearLayout
        android:id="@+id/lin_birthday"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_63"
        android:background="@drawable/selector_bg_click"
        android:gravity="center_vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_28"
            android:text="@string/birthday"
            android:textColor="@color/color_353535"
            android:textSize="@dimen/text_font_13" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />


        <TextView
            android:id="@+id/tv_birthday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/padding_15"
            android:textColor="@color/color_8c919b"
            android:textSize="@dimen/text_font_14"
            android:text="@string/please_select" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_marginEnd="@dimen/padding_36"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_right"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_0_33"
        android:layout_marginStart="@dimen/padding_28"
        android:layout_marginEnd="@dimen/padding_25"
        android:background="@color/color_44979797" />

    <!--身高-->
    <LinearLayout
        android:id="@+id/lin_height"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_63"
        android:background="@drawable/selector_bg_click"
        android:gravity="center_vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_28"
            android:text="@string/body_height"
            android:textColor="@color/color_353535"
            android:textSize="@dimen/text_font_13" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_height"
            android:layout_width="@dimen/padding_150"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/padding_15"
            android:text="@string/please_select"
            android:gravity="right|center_vertical"
            android:textColor="@color/color_8c919b"
            android:textSize="@dimen/text_font_14" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_marginEnd="@dimen/padding_36"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_right"/>
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_0_33"
        android:layout_marginStart="@dimen/padding_28"
        android:layout_marginEnd="@dimen/padding_25"
        android:background="@color/color_44979797" />

    <!--体重-->
    <LinearLayout
        android:id="@+id/lin_weight"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_63"
        android:background="@drawable/selector_bg_click"
        android:gravity="center_vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_28"
            android:text="@string/weight"
            android:textColor="@color/color_353535"
            android:textSize="@dimen/text_font_13" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />


        <TextView
            android:id="@+id/tv_weight"
            android:layout_width="@dimen/padding_150"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/padding_15"
            android:text="@string/please_select"
            android:gravity="right|center_vertical"
            android:textColor="@color/color_8c919b"
            android:textSize="@dimen/text_font_14" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_marginEnd="@dimen/padding_36"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_right"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_0_33"
        android:layout_marginStart="@dimen/padding_28"
        android:layout_marginEnd="@dimen/padding_25"
        android:background="@color/color_44979797" />
</LinearLayout>
