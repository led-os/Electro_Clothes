<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/padding_44"
    android:background="@color/white"
    android:layout_marginBottom="@dimen/padding_0.5">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/padding_50"
        android:layout_marginRight="@dimen/padding_50"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/color_353535"
        android:textSize="@dimen/text_font_16" />

    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:adjustViewBounds="true"
        android:layout_centerVertical="true"
        android:paddingStart="@dimen/padding_28"
        android:paddingTop="@dimen/padding_10"
        android:paddingBottom="@dimen/padding_10"
        android:src="@drawable/ic_goback"
        android:visibility="visible" />

    <com.business.electr.clothes.view.SearchBarView
        android:id="@+id/search_bar_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_32"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/padding_16"
        android:layout_marginRight="@dimen/padding_16"
        android:layout_toEndOf="@+id/btn_back"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/btn_title_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:paddingBottom="@dimen/padding_10"
        android:paddingEnd="@dimen/padding_28"
        android:paddingStart="@dimen/padding_10"
        android:paddingTop="@dimen/padding_10"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_right_btn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:paddingEnd="@dimen/padding_28"
        android:singleLine="true"
        android:text="提交"
        android:textColor="@color/color_353535"
        android:textSize="@dimen/text_font_14"
        android:visibility="gone" />


</RelativeLayout>